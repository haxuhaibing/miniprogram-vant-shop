/* pages/cart/cart.wxss */
.cart-manage {
  display: -webkit-flex;
  display: -ms-flex;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
}

.cart-manage .operation {
  color: red;
}

.cart-list-item {
  display: -webkit-flex;
  display: -ms-flex;
  display: flex;
  align-items: center;
  margin: 0 30rpx;
  border-bottom: 1px solid #ebedf0;
}

.cart-list-item .content {
  flex: 1;
}

.price-stepper {
  display: -webkit-flex;
  display: -ms-flex;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cart-list-item .thumb {
  width: 200rpx;
  height: 200rpx;
}

.cart-list-item .name {
  font-size: 28rpx;
  color: #666;
}

.cart-list-item .price {
  font-size: 28rpx;
  color: red;
}
.cart-list-item-del{
  height: 100%;
  background: red;
  display: -webkit-flex;
  display: -ms-flex;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  width: 130rpx;
}
